#!/bin/bash

# usage: ./sortfile.sh path/to/file

if [ $# -ne 1 ]; then
  echo "Usage: $0 <file>"
  exit 1
fi

file="$1"

if [ ! -f "$file" ]; then
  echo "Error: '$file' not found."
  exit 1
fi

# Sort the file and replace in-place
tmpfile=$(mktemp)
sort "$file" > "$tmpfile" && mv "$tmpfile" "$file"
